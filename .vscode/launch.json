{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch and Debug Blazor WASM",
            "type": "blazorwasm",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "url": "http://localhost:5218",  // Или https://localhost:5001, если используете HTTPS
            "browser": "chrome",  // Можно изменить на "edge"
            "trace": true  // Включает логи для отладки, если нужно
        },
        {
            "name": "Attach to Running Blazor WASM",
            "type": "blazorwasm",
            "request": "attach",
            "url": "http://localhost:5218"  // URL запущенного приложения
        }
    ]
}